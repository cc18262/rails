<p id="notice"><%= notice %></p>

<h1>Mypage一覧</h1>

<table>
  <thead>
    <tr>
      <th>会社名</th>
      <th>mypage</th>
      <th>ログインID</th>
      <th>ログインパスワード</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= link_to post.body, post.body, target: :_blank, rel: "noopener noreferrer" %></td>
        <%#<td><%= post.body %></td>
        <td><%= post.logid %></td>
        <td><%= post.logpass %></td>
        <td><%= link_to '詳細', post %></td>
        <td><%= link_to '編集', edit_post_path(post) %></td>
        <td><%= link_to '削除', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

